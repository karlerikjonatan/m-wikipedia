{
	"manifest_version": 2,
	"name": "m-wikipedia",
	"version": "1.0.0",
	"description": "",
	"homepage_url": "https://github.com/karlerikjonatan/m-wikipedia",
	"content_scripts": [
		{
			"matches": [
				"*://*.wikipedia.org/*", 
				"*://commons.wikimedia.org/*",
				"*://meta.wikimedia.org/*",
				"*://www.mediawiki.org/*" 
			],
			"exclude_matches": [
				"*://*.m.wikipedia.org/*"
			],
			"js": ["index.js"],
			"run_at": "document_start"	
		}
	]
}
